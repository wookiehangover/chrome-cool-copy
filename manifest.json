{
  "manifest_version": 3,
  "name": "Clean Link Copy",
  "version": "1.0.0",
  "description": "Copy clean URLs without tracking parameters using Cmd+Shift+P (macOS) or Ctrl+Shift+P (Windows/Linux)",
  "permissions": [
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["toast.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

