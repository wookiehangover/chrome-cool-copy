{
  "manifest_version": 3,
  "name": "Cool Copy",
  "version": "1.0.0",
  "description": "Copy clean URLs, markdown formatted links, and selected elements to the clipboard using configurable keyboard shortcuts",
  "permissions": ["clipboardWrite", "tabs", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cool Copy - View Clipped Pages"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "commands": {
    "copy-clean-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Copy clean URL without tracking parameters"
    },
    "copy-markdown-link": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Copy markdown formatted link"
    },
    "copy-element": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Copy selected element to clipboard"
    },
    "clip-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Clip current page to AgentDB"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/turndown.js", "dist/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["clipped-pages.html", "clipped-pages.css", "clipped-pages.js", "popup.html", "popup.css", "popup.js", "settings.html", "settings.css", "settings.js", "dist/database.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
