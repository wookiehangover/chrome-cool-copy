{
  "manifest_version": 3,
  "name": "Cool Copy",
  "version": "1.0.0",
  "description": "Copy clean URLs, markdown formatted links, and selected elements to the clipboard using configurable keyboard shortcuts",
  "permissions": ["clipboardWrite", "tabs", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "pages/popup.html",
    "default_title": "Cool Copy - View Clipped Pages"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "copy-clean-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Copy clean URL without tracking parameters"
    },
    "copy-markdown-link": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Copy markdown formatted link"
    },
    "open-command-palette": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Open command palette"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["vendor/turndown.js", "vendor/darkmode.min.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["pages/clipped-pages.html", "pages/clipped-pages.css", "pages/clipped-pages.js", "pages/popup.html", "pages/popup.css", "pages/popup.js", "pages/settings.html", "pages/settings.css", "pages/settings.js", "services/database.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
