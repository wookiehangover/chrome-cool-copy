{
  "manifest_version": 3,
  "name": "Cool Copy",
  "version": "1.0.0",
  "description": "Copy clean URLs, markdown formatted links, and selected elements to the clipboard using configurable keyboard shortcuts",
  "permissions": [
    "clipboardWrite",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "commands": {
    "copy-clean-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Copy clean URL without tracking parameters"
    },
    "copy-markdown-link": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Copy markdown formatted link"
    },
    "copy-element": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Copy selected element to clipboard"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/turndown.js", "src/content.js"],
      "css": ["src/toast.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

