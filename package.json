{
  "type": "module",
  "name": "chrome-cool-copy",
  "version": "1.0.0",
  "description": "Chrome extension for enhanced copy functionality",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c --watch",
    "cleanup": "bash scripts/cleanup-migration.sh",
    "lint": "oxlint src/**/*.ts",
    "format": "oxfmt src/**/*.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/chrome": "^0.1.32",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "rollup": "^4.x",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-import-css": "^4.1.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@agentdb/sdk": "^1.1.26"
  }
}
