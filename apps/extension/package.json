{
  "type": "module",
  "name": "@repo/extension",
  "version": "1.0.0",
  "description": "Chrome extension for enhanced copy functionality",
  "private": true,
  "scripts": {
    "build": "pnpm build:content && vite build",
    "build:content": "esbuild src/content/index.ts --bundle --format=iife --outfile=dist/content.js --sourcemap",
    "watch": "vite build --watch",
    "lint": "oxlint src",
    "format": "oxfmt src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.32",
    "autoprefixer": "^10.4.23",
    "jsdom": "^27.3.0",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@repo/shared": "workspace:*",
    "@agentdb/sdk": "^1.1.26",
    "@ai-sdk/react": "^3.0.0",
    "ai": "^6.0.0",
    "zod": "^4.2.1"
  }
}
