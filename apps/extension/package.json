{
  "type": "module",
  "name": "@repo/extension",
  "version": "1.0.0",
  "description": "Chrome extension for enhanced copy functionality",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c --watch",
    "lint": "oxlint src",
    "format": "oxfmt src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/chrome": "^0.1.32",
    "autoprefixer": "^10.4.23",
    "jsdom": "^27.3.0",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "postcss": "^8.5.6",
    "rollup": "^4.x",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-import-css": "^4.1.2",
    "tailwindcss": "^4.1.18",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@agentdb/sdk": "^1.1.26",
    "@ai-sdk/react": "^3.0.0",
    "ai": "^6.0.0",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "zod": "^4.2.1"
  }
}
